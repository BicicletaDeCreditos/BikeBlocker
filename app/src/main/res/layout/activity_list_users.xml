<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clickable="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:clickable="true"
            android:contextClickable="true"
            android:background="@drawable/user_background">


        </LinearLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/addUserButton"
        android:layout_gravity="left|bottom"
        android:clickable="true"
        android:onClick="startAddNewUserActivity"
        android:contentDescription="addUser"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:src="@drawable/addprofile_icon"
        android:background="@drawable/roundedbutton" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/changePasswordButton"
        android:layout_gravity="right|bottom"
        android:clickable="true"
        android:onClick="startChangePasswordActivity"
        android:contentDescription="changeAdminPassword"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:contextClickable="true"
        android:src="@drawable/gear_icon"
        android:background="@drawable/roundedbutton"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="717dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/user_name" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="8dp"
            android:textSize="20sp" android:textColor="@android:color/black"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="startViewUserActivity"
            android:contentDescription="userRow" />
    </LinearLayout>

</FrameLayout>


