<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bikeblocker.bikeblocker.Control.WelcomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Users"
        android:id="@+id/ListUsersButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="startListUsersActivity" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add User"
        android:id="@+id/addUserButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:onClick="startAddNewUserActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:id="@+id/changePasswordButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:onClick="startChangePasswordActivity" />
</RelativeLayout>
