<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bikeblocker.bikeblocker.Control.ViewUserActivity"
    android:orientation="horizontal"
    android:id="@+id/userViewLayout">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="120dp"
        android:id="@+id/tableLayout">
        <TableRow android:id="@+id/nameTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/nameTextView"
                android:textSize="40dp"
                android:textStyle="bold"
                android:contentDescription="userNameTextView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/creditsTableRow">
            <TextView android:id="@+id/creditsLabelTextView"
                android:text="@string/creditsLabel"
                android:textSize="25dp"
                android:textStyle="bold"
                android:contentDescription="creditsLabel" />
            <TextView android:id="@+id/creditsTextView"
                android:contentDescription="creditsText" />
        </TableRow>

    </TableLayout>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/webButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tableLayout"
        android:clickable="true"
        android:contentDescription="websites" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/appsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tableLayout"
        android:clickable="true"
        android:contentDescription="apps"
        android:onClick="startListAppsActivity" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/deleteUserButton"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contentDescription="deleteUser" />
</RelativeLayout>


