<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bikeblocker.bikeblocker.Control.ViewUserActivity"
    android:orientation="horizontal"
    android:id="@+id/userViewLayout"
    android:background="@drawable/user_background">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="120dp"
        android:id="@+id/tableLayout">
        <TableRow android:id="@+id/nameTableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/usernameTableRow"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/creditsTableRow">

        </TableRow>

    </TableLayout>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/webButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tableLayout"
        android:clickable="true"
        android:contentDescription="websites" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/appsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/tableLayout"
        android:clickable="true"
        android:contentDescription="apps" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/deleteUserButton"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contentDescription="deleteUser" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal">

            <TextView android:id="@+id/nameTextView"
                android:textSize="40dp"
                android:textStyle="bold"
                android:contentDescription="userNameTextView"
                android:layout_gravity="center_horizontal" />
        </GridLayout>

        <GridLayout
            android:layout_width="482dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal">

            <TextView android:id="@+id/usernameLabelTextView"
                android:text="@string/usernameLabel"
                android:textSize="25dp"
                android:textStyle="bold"
                android:contentDescription="usernameLabel" />

            <TextView android:id="@+id/usernameTextView"
                android:contentDescription="usernameText" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal">

            <TextView android:id="@+id/creditsLabelTextView"
                android:text="@string/creditsLabel"
                android:textSize="25dp"
                android:textStyle="bold"
                android:contentDescription="creditsLabel" />

            <TextView android:id="@+id/creditsTextView"
                android:contentDescription="creditsText" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_row="3"
            android:layout_column="0"></GridLayout>
    </GridLayout>

</RelativeLayout>


